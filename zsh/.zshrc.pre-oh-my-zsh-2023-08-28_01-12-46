# new_alias_here

# sets the window name as the current folder name (for tmux)
function c () { 
    cd $1 
    folderstr=$(basename "$(pwd)");
    homefolder=zom
    if [ "$folderstr" = $homefolder ];
    then echo -en "\e]2;" "\a" 
    else
    echo -en "\e]2;" $folderstr"\a"
    fi}



